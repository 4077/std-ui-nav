<div class="{__NODE_ID__}" instance="{__INSTANCE__}">

    <!-- table -->
    <div class="table">
        <div class="row">
            <div class="cell label">id</div>
            <div class="cell value padding">{ID}</div>
        </div>

        <div class="row">
            <div class="cell label">Название</div>
            <div class="cell value">{NAME_TXT}</div>
        </div>

        <div class="row">
            <div class="cell label">Адрес</div>
            <div class="cell value">{ROUTE_TXT}</div>
        </div>

        <div class="row">
            <div class="cell label">Включен</div>
            <div class="cell value">{ENABLED_SWITCHER}</div>
        </div>

        <div class="row">
            <div class="cell label">Нажимаемый</div>
            <div class="cell value">{CLICKABLE_SWITCHER}</div>
        </div>

        <div class="row">
            <div class="cell label">Проверка разрешений (видимость)</div>
            <div class="cell value">{PERMISSIONS_TXT}</div>
        </div>

        <div class="row">
            <div class="cell label">Проверка разрешений (нажимаемость)</div>
            <div class="cell value">{CLICKABLE_PERMISSIONS_TXT}</div>
        </div>
    </div>
    <!-- / -->

</div>
